<h1>Listing Microposts</h1>
<table>
	<tr>
		<th>Content</th>
		<th>User Id</th>
	</tr>
	<%@micropost.each do |micropost|%>
		<tr>
			<td><%=micropost.content%></td>
			<td><%=micropost.user_id%></td>
			<td><%=link_to "show", micropost_path(micropost.id)%>
			<td><%=link_to "edit", edit_micropost_path(micropost.id)%>
			<td><%=link_to "delete", micropost_path(micropost.id), method: :DELETE, data: {confirm:"Are you sure you want to DELETE it???"}%>
		</tr>
	<%end%>	
	<br>
</table>
<br>
<%=link_to "New Micropost", new_micropost_path%>